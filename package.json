{
    "name": "commit-agent-cli",
    "version": "0.1.5",
    "description": "AI-powered git commit CLI using LangGraph and Claude 4.5",
    "main": "dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "files": [
        "dist"
    ],
    "bin": {
        "commit": "dist/index.js"
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts --clean",
        "start": "node dist/index.js",
        "dev": "tsup src/index.ts --watch --onSuccess \"node dist/index.js\"",
        "lint": "eslint src/**",
        "format": "prettier --write .",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "git",
        "commit",
        "ai",
        "cli",
        "claude",
        "langgraph"
    ],
    "author": "Commit CLI Contributor",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sunggyeol/commit-agent-cli.git"
    },
    "license": "MIT",
    "dependencies": {
        "@ai-sdk/anthropic": "^0.0.39",
        "@clack/prompts": "^0.7.0",
        "@langchain/anthropic": "^0.3.0",
        "@langchain/core": "^0.3.0",
        "@langchain/langgraph": "^0.2.0",
        "ai": "^3.3.33",
        "commit-agent-cli": "^0.1.0",
        "dotenv": "^16.4.5",
        "execa": "^9.3.1",
        "update-notifier": "^7.3.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^22.5.4",
        "@types/update-notifier": "^6.0.8",
        "tsup": "^8.2.4",
        "typescript": "^5.5.4"
    },
    "engines": {
        "node": ">=18"
    }
}
